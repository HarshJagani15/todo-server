{
  "compilerOptions": {
    "target": "es2016", // Set the JavaScript language version for emitted JavaScript
    "module": "commonjs", // Specify what module code is generated
    "esModuleInterop": true, // Emit additional JavaScript for better interop with CommonJS
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type checking for declaration files
    "moduleResolution": "node", // Module resolution strategy
    "noEmit": false, // Emit output files (set to false if you want TypeScript to transpile code)
    "outDir": "./dist", // Specify the output folder for emitted JavaScript files
    "rootDir": "./", // Root directory for TypeScript files
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "allowJs": true, // Allow JavaScript files in the project
    "noUnusedLocals": true, // Enable error reporting for unused local variables
    "noUnusedParameters": true // Enable error reporting for unused parameters
  },
  "include": [
    "*.ts", // Include all .ts files in the root directory
    "**/*.ts" // Include all .ts files in subdirectories (recursively)
, "client/src/pages/xyz.tsx"  ],
  "exclude": [
    "node_modules" // Exclude the node_modules folder from being compiled
  ]
}
